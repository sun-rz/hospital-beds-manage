<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="graduation.project.hospitalbedsmanage.mapper.DoctorMapper">

    <select id="login" resultType="graduation.project.hospitalbedsmanage.entity.Doctor">
        select * FROM doctor where (name = #{name} and password = #{password})
        or
        ( email =#{name} and password=#{password})
        or
         (mobile =#{name} and password=#{password})
    </select>

    <select id="getUserInfoByName" resultType="graduation.project.hospitalbedsmanage.entity.Doctor">
        select * FROM doctor where name = #{name}
    </select>

    <select id="getUserInfo" resultType="graduation.project.hospitalbedsmanage.entity.Doctor">
        select * FROM doctor where name = #{name} or  mobile = #{mobile}
    </select>

    <insert id="register" parameterType="graduation.project.hospitalbedsmanage.entity.Doctor">
       insert into doctor(name, password,mobile,email) values ( #{name}, #{password}, #{mobile}, #{email})
    </insert>
</mapper>
